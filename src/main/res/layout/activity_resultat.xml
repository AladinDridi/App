<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

<TextView
    android:id="@+id/textzoneouver"
    android:layout_width="wrap_content"
    android:layout_marginTop="62dp"
    android:layout_marginLeft="32dp"
    android:textSize="6dp"
    android:textColor="@color/colorPrimary"
    android:text="LE GRAND JOUR."
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textzoneaveugle"
        android:layout_width="wrap_content"
        android:textSize="6dp"
        android:layout_marginLeft="125dp"
        android:textColor="@color/colorPrimary"
        android:text="LA ZONE AVEUGLE"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textzoneouver"
        android:layout_alignEnd="@+id/textZoneInconnue" />

    <ImageView
        android:id="@+id/DrawingImageView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textzonecaché"
        android:layout_width="wrap_content"
        android:layout_marginLeft="35dp"
        android:textSize="6dp"
        android:textColor="@color/colorPrimary"
        android:text="LA FACE CACHEE"
        android:layout_height="wrap_content"
        android:layout_marginBottom="125dp"
        android:layout_alignBottom="@+id/frame"
        android:layout_alignEnd="@+id/textzoneouver" />

    <TextView
        android:id="@+id/textZoneInconnue"
        android:layout_width="wrap_content"
        android:textSize="6dp"
        android:layout_marginLeft="125dp"
        android:textColor="@color/colorPrimary"
        android:text="L'INCONNU"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textzonecaché"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_marginTop="312dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">
        <TextView
            android:text="Interpretation D'evaluation Johari"
            android:layout_width="wrap_content"
            android:textStyle="bold|italic"
            android:layout_height="wrap_content" />
    </FrameLayout>

<android.support.v7.widget.CardView
    android:layout_below="@+id/frame"
    android:id="@+id/cardResult"
    android:layout_marginLeft="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textrsltrtetat"
        android:textColor="@color/coleurdebar"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/interpreter"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="wrap_content" />


</android.support.v7.widget.CardView>

<Button
    android:layout_below="@+id/cardResult"
    android:id="@+id/btn_cquoifenetrecolonnes"
    android:layout_marginTop="11dp"
    android:textColor="#A00000"
    android:drawableLeft="@drawable/ic_learning"
    android:layout_width="match_parent"
    android:background="#f5dede"
    android:text="fenêtre colonne Signification"
    android:layout_height="wrap_content"



    />

    <TextView
        android:layout_below="@+id/btn_cquoifenetrecolonnes"
        android:id="@+id/textwindowmeaning"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>


</ScrollView>